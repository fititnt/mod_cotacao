<?xml version="1.0" encoding="utf-8"?>
<extension
    type="module"
    method="upgrade"
    version="1.6">
    <name>MOD_COTACAO</name>
    <author>Emerson Rocha Luiz</author>
    <creationDate>2011-12-02</creationDate>
    <copyright>Copyright (C) 2005 - 2011 Webdesign Assessoria em Tecnologia da Informacao.</copyright>
    <license>GNU General Public License version 3</license>
    <authorEmail>emerson@webdesign.eng.br</authorEmail>
    <authorUrl>http://fititnt.org</authorUrl>
    <version>0.1RC</version>
    <description>MOD_COTACAO_XML_DESCRIPTION</description>
    <files>
        <filename module="mod_cotacao">mod_cotacao.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <filename>readme.txt</filename>
        <filename>license.txt</filename>
        <folder>tmpl</folder>
        <folder>languages</folder>
    </files>
    <languages folder="languages">
        <language tag="en-GB">en-GB/en-GB.mod_cotacao.ini</language>
        <language tag="en-GB">en-GB/en-GB.mod_cotacao.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="moduleclass_sfx"
                    type="text"
                    label="MOD_COTACAO_MODULECLASSSFX_LABEL"
                    description="MOD_COTACAO_MODULECLASSSFX_DESC"
                    default="">
                </field>  
                <field
                    name="modbefore"
                    type="textarea"
                    cols="45"
                    rows="8"
                    label="MOD_COTACAO_MODBEFORE_LABEL"
                    description="MOD_COTACAO_MODBEFORE_DESC">
                </field>
                <field
                    name="modafter"
                    type="textarea"
                    cols="45"
                    rows="8"
                    label="MOD_COTACAO_MODAFTER_LABEL"
                    description="MOD_COTACAO_MODAFTER_DESC">
                </field> 
            </fieldset>
        </fields>
    </config>
</extension>
